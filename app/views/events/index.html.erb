<%= render 'layouts/header' %>

<h1> Contacts for <%= @practice.name %> </h1>

<div id='left-13'>
  <h2><%= link_to @practice.name, edit_practice_path(@practice), title: 'Edit Practice', rel: 'tooltip' %>
  </h2>
  <table class='space'>
    <tr>
      <td> Primary Recruiter </td>
      <td><%= link_to @practice.partner.name, partner_path(@practice.partner), title: "View #{@practice.partner.name}", rel: 'tooltip' %></td>
    </tr>
    <tr>
      <td> Address </td>
      <td> <%= link_to @practice.address, "https://maps.google.com/maps?q=#{@practice.address}", target: '_blank', title: 'Map Practice', rel: 'tooltip' %> </td>
    </tr>
    <tr>
      <td>Phone</td>
      <td> <%= @practice.phone %></td>
    </tr>
    <tr>
      <td>URL</td>
      <td><%= link_to @practice.url, @practice.url, target: '_blank', title: "Open URL", rel: 'tooltip' %></td>
    </tr>
  </table>

  <% if @practice.personnels.any? %>
    <table class='typical enable-data-table'>
      <caption>Staff</caption>
      <thead>
      <tr>
          <th>Name</th>
          <th>Role</th>
          <th>Best Contact</th>
        </tr>
      </thead>
      <tbody>
        <% @practice.personnels.order("name").each do |p| %>
          <tr>
            <td><%= link_to p.name, edit_practice_personnel_path(@practice, p), title: "Edit Staff Info", rel: "tooltip" %></td>
            <td><%= Personnel::ROLE_VALS.key(p.role) %></td>
            <td><%= p.best_contact %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <br />
    <h4> No staff noted. </h4>
    <br />
  <% end %>
</div>

<div id='right-23'>

  <div id='openPopupForm'>
    <h3>Contacts
      <a class='addButton' title="Add New Appointment" rel="tooltip">
        <%= image_tag("plus-blue.png", size: "15x15") %>
      </a>
    </h3>
  </div>

  <div id='popupForm'>
    <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this appointment from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div id="closePopupForm">
        <a><%= image_tag("close.gif", alt: "Close") %></a>
      </div>
      <h3>New Appointment</h3>
      <table class='space'>
        <tr>
          <td><%= f.label :practice_id, "Practice" %></td>
          <td><%= f.select :practice_id, options_for_select(Practice.order("name").map{ |p| [p.name, p.id] }), selected: params[:practice_id] %></td>
        </tr>
        <tr>
          <td><%= f.label :partner_id, "Partner" %></td>
          <td><%= f.select :partner_id, options_for_select(Partner.order("name").map{ |p| [p.name, p.id] }, selected: current_partner.id) %></td>
        </tr>
        <tr>
          <td><%= f.label :schedule_dt, "Date" %></td>
          <td><%= f.text_field :schedule_dt, class: 'datepicker' %> mm/dd/yyyy</td>
        </tr>
        <tr>
          <td><%= f.label :schedule_tm, "Time" %></td>
          <td><%= f.text_field :schedule_tm, type: "time" %> hh:mm MM</td>
        </tr>
        <tr>
          <td><%= f.label :contact_type, "Contact Type" %></td>
          <td><%= f.select :contact_type, Event::CONTACT_TYPE_VALS %></td>
        </tr>
        <tr>
          <td><%= f.label :description, "Notes" %></td>
          <td><%= f.text_area :description, rows: 5 %></td>
        </tr>
      </table>

      <div class="actions">
        <%= f.submit "Add Appointment" %>
      </div>
    <% end %>
  </div>

  <% if @practice.events.any? %>
    <table class='typical enable-data-table'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Recruiter</th>
          <th>Contact Type</th>
          <th>Outcome</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% @practice.events.order("schedule_dt, schedule_tm").each do |e| %>
          <tr>
            <td><%= link_to e.schedule_dt.try(:strftime, "%-m/%-d/%Y"), edit_practice_event_path(@practice, e), title: "Edit Contact", rel: "tooltip" %></td>
            <td><%= e.schedule_tm.try(:strftime, "%l:%M %p") %></td>
            <td><%= e.partner.name %></td>
            <td><%= e.contact_type %></td>
            <td><%= e.outcome %></td>
            <td><%= truncate(e.description, length: 75) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <br />
    <h4> No contacts noted. </h4>
    <br />
  <% end %>
</div>

<div class='clearfix'></div>

<%= link_to "Back", :back %>