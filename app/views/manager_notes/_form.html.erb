<%= form_for(@site) do |f| %>

  <div class='box'>
    <p class='title'>What are the primary barriers or challenges your coaches are currently experiencing in their coaching work?</p>
    <div id='add-barrier-note'>
      <%= link_to_add_association "Add new barrier", f, :manager_notes, partial: 'note_barrier_fields', 'data-association-insertion-method' => 'prepend', 'data-association-insertion-node' => '#manager_notes' %>
    </div>
    <table id='barriers' class='space'>
      <thead>
        <tr>
          <td>Topic</td>
          <td>Comments</td>
          <td>Last Updated</td>
        </tr>
      </thead>
      <tbody id='manager_notes'>
        <%= f.fields_for(:manager_notes, @manager_barriers) do |note| %>
          <%= render 'note_barrier_fields', :f => note %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="actions">
    <%= f.submit "Save Notes" %>
  </div>
<% end %>
